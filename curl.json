{
  "method": "POST",
  "url": "http://{{.Env.base}}/auth/signup",

  "headers": {
    "Foo": "{{.Params.id}}",
    "Authorization": "{{.Env.auth}}"
  },

  "requests": {
    "default": {
      "before": {
        "auth": "./path/to/auth/request"
      },

      "expect": {
        "status": 201
      },

      "headers": {},

      "params": {
        "id": "foo-bar"
      },

      "body": {
        "file": "./curl-body.json"
      }
    },

    "error": {
      "expect": {
        "status": 400
      },

      "params": {
        "id": "bar"
      },

      "body": {
        "json": {
          "hello": "I am some json",
          "how": "are you?"
        }
      }
    }
  }
}
