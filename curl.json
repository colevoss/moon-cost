{
  "method": "POST",
  "url": "http://{{.Env.base}}/auth/signup/{{.Params.id}}",

  "headers": {
    "Foo": "bar"
  },

  "requests": {
    "default": {
      "before": {
        "auth": "./path/to/auth/request"
      },

      "expect": {
        "status": 200
      },

      "headers": {
        "Foo": "baz",
        "Hello": "world"
      },

      "params": {
        "id": "foo"
      },

      "body": {
        "file": "./curl-body.json"
      }
    },

    "error": {
      "expect": {
        "status": 400
      },

      "params": {
        "id": "bar"
      },

      "body": {
        "json": {
          "hello": "I am some json",
          "how": "are you?"
        }
      }
    }
  }
}
